---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"input"> {}

const { id, name, required, placeholder, type, value } = Astro.props;
---

<input
  class="border-border placeholder:text-border w-full rounded border bg-transparent px-3 py-1.5"
  type={type}
  name={name}
  id={id}
  {required}
  placeholder={placeholder}
  value={value}
/>
